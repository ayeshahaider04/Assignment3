<%- include('partials/header') %>
<h2>Edit Study Session</h2>
<form action="/edit/<%= session._id %>" method="POST">
  <input type="text" name="title" value="<%= session.title %>" required>
  <textarea name="description" required><%= session.description %></textarea>
  <input type="date" name="date" value="<%= session.date.toISOString().split('T')[0] %>" required>
  <input type="number" name="duration" value="<%= session.duration %>" required>
  <button type="submit">Update Session</button>
</form>
<a href="/sessions" class="btn">Back to Sessions</a>
<%- include('partials/footer') %>

