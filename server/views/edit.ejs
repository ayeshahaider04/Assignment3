<%- include('partials/header') %>

<h2>Edit Study Session</h2>

<form action="/edit/<%= session._id %>" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= session.title %>" placeholder="Title" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description" placeholder="Description" required><%= session.description %></textarea>

  <label for="date">Date:</label>
  <input type="date" id="date" name="date" value="<%= session.date.toISOString().split('T')[0] %>" required>

  <label for="duration">Duration (hours):</label>
  <input type="number" id="duration" name="duration" value="<%= session.duration %>" placeholder="Duration (hours)" required>

  <button type="submit">Update Session</button>
</form>

<a href="/sessions" class="btn">Back to Sessions</a>

<%- include('partials/footer') %>




